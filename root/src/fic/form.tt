[% TAGS {{ }} %]

<form class="Form" action="{{ c.req.uri }}" method="post" >
	<input type="hidden" name="csrf_token" value="{{ csrf_token }}" />
	{{- IF c.form.has_error }}
		{{- FOREACH message IN c.form.messages('submit') }}
		<div class="Flash">{{ message | html }}</div>
		{{- END }}
	{{- END }}
	<div class="Form-group two">
		<div>
			<label>Title<span class="required">*</span></label>
			<input name="title" type="text" size="30" maxlength="{{ c.config.len.max.title }}" required>
		</div>
		<div>
			<label>Author</label>
			<input name="author" type="text" size="30" maxlength="{{ c.config.len.max.user }}"
				placeholder="Anonymous">
		</div>
	</div>
	{{- IF (images = event.images_rs.metadata.seed_order.all) }}
	<div>
		<label>Art Title(s)<span class="required">*</span></label>
		<select name="image_id" size="{{ event.images_rs.count + 1 }}"
			title="Artwork(s) related to the story."
			multiple required >
			<optgroup label="Submitted Artworks">
			{{- FOREACH image IN images }}
				<option value="{{ image.id }}">{{ image.title | html }}</option>
			{{- END }}
			</optgroup>
		</select>
	</div>
	{{- END }}
	<div>
		<label>Website</label>
		<input name="website" type="url" size="72" maxlength="{{ c.config.len.max.url }}"
			title="Optional link to your online galleries"
			placeholder="http://" />
	</div>
	<div>
		<label>Story<span class="required">*</span></label>
		<textarea name="story" id="story-field" rows="16" cols="32" required
			title="Word limit: {{ event.wc_min _ 'â€“' _ event.wc_max }}"
			data-max="{{ event.wc_max }}" data-min="{{ event.wc_min }}"></textarea>
		<span class="Form-note">
			<a href="/style">{{ c.document('style').title | html }}</a>
		</span>
	</div>
	<div>
		<label>Wordcount</label>
		<input type="text" id="wordcount" size="72" disabled>
	</div>
	<div>
		<input class="Form-submit" type="submit" value="Submit">
	</div>
</form>
