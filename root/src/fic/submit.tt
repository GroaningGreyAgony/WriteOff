[% TAGS {{ }} %]

<div class="Document">
	<div class="Document-title">
		Fic Submission
	</div>

	<div class="Countdown">
		{{ IF event.fic > now }}
			{{ event.fic.delta_html }}
		{{ ELSIF event.fic_end > now }}
			{{ event.fic_end.delta_html }}
		{{ ELSE }}
			{{ c.string('subsClosed') }}
		{{ END }}
	</div>

	{{ IF event.fic_subs_allowed }}
		{{ IF c.user }}
			{{ INCLUDE fic/form.tt }}
		{{ ELSE }}
		<div class="Flash">{{ c.string('loginRequiredFic') }}</div>
		{{ END }}
	{{ END }}
</div>
