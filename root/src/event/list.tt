[% USE cache = Cache %]
<h1>[% title.-1 %]</h1>

[%- IF events.count %]
<div class="events">
	[%- WHILE (event = events.next) %]
	[%
		cache.inc(
			'template' => 'event/single.tt',
			'ttl' => 360,
			'keys' => {
				'type' => 'event-listing',
				'id' => event.id,
				'organiser' => event.is_organised_by(c.user),
				'timzone' => c.user.timezone,
			},
		)
	%]
	[% END %]
</div>
[%- ELSE %]
<p>No events found.</p>
[%- END %]
