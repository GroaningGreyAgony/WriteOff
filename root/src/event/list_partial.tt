[% MACRO local(dt) GET
	dt.set_time_zone(c.user.get('timezone') || 'UTC').strftime('%a, %d %b %Y %R %Z') %]
[%- IF events.count %]
<div class="event-listing">
	[%- WHILE (event = events.next) %]
	<h3>
		<a href="#">[% event.prompt | html %] â€“ [% local(event.start) %]</a>
	</h3>
	<div>
		<table>
			<tr>
				<th> </th>
				<th class="heading">Begins</th>
				<th class="heading">Ends</th>
			</tr>
			[%- IF event.art %]
			<tr>
				<th>Drawing</th>
				<td>[% local(event.art) %]</td>
				<td>[% local(event.art_end) %]</td>
			</tr>
			[%- END %]
			<tr>
				<th>Writing</th>
				<td>[% local(event.fic) %]</td>
				<td>[% local(event.fic_end) %]</td>
			</tr>
			[%- IF event.prelim %]
			<tr>
				<th>Prelims</th>
				<td>[% local(event.prelim) %]</td>
				<td>[% local(event.public) %]</td>
			</tr>
			[%- END %]
			<tr>
				<th>[% event.private ? 'Main' : 'Finals' %]</th>
				<td>[% local(event.public) %]</td>
				<td>[% local(event.private || event.end) %]</td>
			</tr>
			[%- IF event.private %]
			<tr>
				<th>Finals</th>
				<td>[% local(event.private) %]</td>
				<td>[% local(event.end) %]</td>
			</tr>
			[%- END %]
		</table>
		<p style="font-size: 10pt">
			<strong>Word limit:</strong>
			[% event.wc_min %]&ndash;[% event.wc_max %]
		</p>
		<ul>
			<li><a class="link" href="[% c.uri_for('/event/' _ event.id_uri _ '/rules') %]">Rules</a>
		</ul>
		<ul>
			<li><a class="link" href="[% c.uri_for('/event/' _ event.id_uri _ '/prompt/submit') %]">Prompt submission</a></li>
			[%- IF event.art %]
			<li><a class="link" href="[% c.uri_for('/event/' _ event.id_uri _ '/art/submit') %]">Art submission</a></li>
			[%- END %]
			<li><a class="link" href="[% c.uri_for('/event/' _ event.id_uri _ '/fic/submit') %]">Fic submission</a></li>
		</ul>
		<ul>
			<li><a class="link" href="[% c.uri_for('/event/' _ event.id_uri _ '/fic/gallery') %]">Fic gallery</a></li>
			[%- IF event.art %]
			<li><a class="link" href="[% c.uri_for('/event/' _ event.id_uri _ '/art/gallery') %]">Art gallery</a></li>
			[%- END %]
		</ul>
		<ul>
			<li><a class="link" href="[% c.uri_for('/event/' _ event.id_uri _ '/prompt/vote') %]">Prompt voting</a></li>
			<li>
				<a class="link" href="[% c.uri_for('/event/' _ event.id_uri _ '/vote/public') %]">
				Fic voting ([% event.private ? 'main' : 'finals' %])
				</a>
			</li>
		</ul>
	[%- c.config.md.markdown( event.blurb ) %]
	[%- IF c.check_user_roles(c.user, 'admin') %]
		<a href="[% c.uri_for( '/event/' _ event.id_uri _ '/edit' ) %]">
				<span class="ui-icon ui-icon-pencil" title="Edit item"></span>
		</a>
	[%- END %]
	</div>
	[%- END %]
</div>
[%- ELSE %]
<p>No events found.</p>
[%- END %]