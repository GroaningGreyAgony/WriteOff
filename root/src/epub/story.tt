<?xml version='1.0' encoding='utf-8'?>
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<title>[% story.title | html %][%- IF event.is_ended %] â€“ [% story.author | html %][%- END %]</title>
		<meta content="http://www.w3.org/1999/xhtml; charset=utf-8" http-equiv="Content-Type"/>
		<link href="story.css" type="text/css" rel="stylesheet"/>
	</head>
	<body>
		<h1>[% story.title | html %]</h1>
		[%- IF event.is_ended %]
		<h2>by [% story.author | html %] </h2>
		[%- END %]
		[%- IF event.art %]
		<div class="art">
			[%- FOREACH art IN story.images %]
				<img src="images/[% art.filename %]"/>
				<h5>[% art.title %]</h5>
				[%- IF event.is_ended %]
				<h6> by [% art.artist | html %]</h6>
				[%- END %]
			[%- END %]
		</div>
		[%- END %]
		<div class="story">
			[% story.contents | bbcode('xhtml' => 1) %]
		</div>
	</body>
</html>
