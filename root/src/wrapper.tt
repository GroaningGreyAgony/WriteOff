<!DOCTYPE html>
<html lang="en">

[%- IF template.name.match('^email/') %]

<head>
	<meta charset="utf-8" />
	<title>[% email.subject || name %]</title>
</head>

<body>

[% content %]

</body>

[%- ELSE %]

<head>
<meta charset="utf-8" />

<title>[% name.list.merge( title.list ).join(' - ') | html %]</title>

<!--[if lt IE 9]>
	<script src="[% c.uri_for('/static/js/html5shiv.js') %]"></script>
<![endif]-->

<link rel="icon" href="[% c.uri_for('/favicon.ico') %]" />
<link rel="stylesheet" href="[% c.uri_for('/static/css/jquery-ui-1.8.22.custom.css') %]" />
<link rel="stylesheet" href="[% c.uri_for('/static/css/main5.css') %]" />

<script src="[% c.uri_for('/static/js/jquery-1.7.2.min.js') %]" ></script>
<script src="[% c.uri_for('/static/js/jquery-ui-1.8.22.custom.min.js') %]" ></script>
<script src="[% c.uri_for('/static/js/site2.js') %]" ></script>

</head>

<body>

<nav>
	<div class="navbar">
		<a class="ui-button" href="[% c.uri_for('/') %]">Home</a>
		<a class="ui-button" href="[% c.uri_for('/faq') %]">FAQ</a>
		<a class="ui-button" href="[% c.uri_for('/scoreboard') %]">Scoreboard</a>
	</div>
	<div class="userbar">
[%- IF error_msg %]
		<p class="ui-state-error ui-corner-all">[% error_msg %]</p>
[%- END %]
[%- IF status_msg %]
		<p class="ui-state-highlight ui-corner-all">[% status_msg %]</p>
[%- END %]
[%- IF c.user %]
		<a class="ui-button" href="[% c.uri_for('/user/me') %]">~[% c.user.username %]</a>
		<a class="ui-button" href="[% c.uri_for('/user/settings') %]">Settings</a>
		<a class="ui-button" href="[% c.uri_for('/user/logout') %]">Logout</a>
[%- ELSE %]
		<form action="[% c.uri_for('/user/login') %]" method="post">
			<input type="text" name="Username" placeholder="Username" size="16" required />
			<input type="password" name="Password" placeholder="Password" size="16" required />
			<input type="submit" value="Login" />
		</form>
		<a class="ui-button" href="[% c.uri_for('/user/recover') %]">Recover</a>
		<a class="ui-button" href="[% c.uri_for('/user/register') %]">Register</a>
[%- END %]
	</div>
</nav>

<article>

[% content %]

</article>

<footer>
	<p>
		It is currently 
		[% format_dt( now, '%a, %d %b %Y %T %z (%Z)' ) %]
	</p>
	<p>
		<a class="link new-window" href="https://github.com/RogerDodger/WriteOff">
			WriteOff.pm
		</a>
		&ndash; Written by RogerDodger
	</p>
[%- IF c.config.footer_addendum %]
	<hr />
	[% md_render( c.config.footer_addendum ) %]
[%- END %]
</footer>

</body>

[%- END %]

</html>